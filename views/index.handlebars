<row>
        <h1>Welcome Page</h1>
    </row>

    <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-default btn-lg" id="guestbttn">Guest</button>
        <button type="button" class="btn btn-default btn-lg" id="hostbttn">Host</button>

        <!-- Guest Modal -->
        <div class="modal fade" id="guestmodal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4>SIGN UP</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form">
                            <div class="form-group">
                                <label for="email">E-Mail</label>
                                <input type="text" class="form-control" id="email" placeholder="Enter your email">
                            </div>
                            <div class="form-group">
                                <label for="username">Name</label>
                                <input type="text" class="form-control" id="username" placeholder="Enter your name">
                            </div>
                            <a href="/guest" type="submit" class="btn btn-success btn-block" role="button">Submit</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Host Modal -->
        <div class="modal fade" id="hostmodal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4>Login</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form">
                            <div class="form-group">
                                <label for="hostemail">E-Mail</label>
                                <input type="text" class="form-control" id="hostemail" placeholder="Enter email">
                            </div>
                            <a href="/eventsToHost" type="submit" class="btn btn-success btn-block" role="button">Sign Up</a>
                            <a href="/eventsToHost" type="submit" class="btn btn-success btn-block" role="button">Login</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
		$(document).ready(function(){
			$("#guestbttn").click(function(){
				$("#guestmodal").modal();
			});
		});

		$(document).ready(function(){
			$("#hostbttn").click(function(){
				$("#hostmodal").modal();
			});
		});
    </script>

