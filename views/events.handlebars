<div class="container">
  <div class="row">

    <h1 class="col-lg-12 text-center jumbotron">EVENT</h1>
        <div class="offset-lg-3 col-lg-2">
          <button type="submit" class="btn btn-primary" onclick="displayEvents()" style="width: inherit">Go to Event</button>
        </div>
        <div class="col-lg-2">
          <button type="submit" class="btn btn-primary" onclick="hostEvents()" style="width: inherit">Host an Event</button>
        </div>
        <div class="col-lg-2">
          <button type="submit" class="btn btn-danger" onclick="manage()" style="width: inherit">Manage</button>
        </div>
        <br>
        <div id="id-display"></div>
        <br>
      <ol class="col-lg-12">
        {{#each events}}
            {{> events/event-block}}
        {{/each}}
      </ol>
  </div>
</div>


<script type="text/javascript">

  $(document.body).on("click", "#see", function(){
    var category = $(this).attr("data-category");
    $.ajax({
      url: "/api/events/" + category,
      method: "GET"
    }).then(function(data){
      console.log(data);
      $("#sub-category").html(data);
    })
  });
</script>






































