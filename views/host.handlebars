<div class="container">
  <div class="row">
    <h1 class="col-lg-12 text-center jumbotron">HOST AN EVENT</h1>

    <div class="col-lg-6 breadcrumb">
      <h2 class="col-md-12 text-center">New Event</h2>

      <form class="host-event-form col-md-12" action="api/create/event" method="POST">
        <br>
        <div class="form-group col-md-12">
          <input placeholder="Category" id="category" type="text" style="width: inherit;"/>
        </div>
        <br>
        <div class="form-group col-md-12">
          <input placeholder="Event Sub-Category" id="event_name" type="text" style="width: inherit;"/>
        </div>
        <br>
        <div class="form-group col-md-12">
          <textarea placeholder="Description" rows="5" id="description" type="text" style="width: inherit;"></textarea>
        </div>
        <br>
        <div class="col-md-12">
          <button type="submit" id="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>
